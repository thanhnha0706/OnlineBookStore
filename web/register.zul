
<zk xmlns:h="native">
    
        <h:div class="wrapper">

    
    <include src="/layout/header.zul" />
    
        <h:section id="content-holder" class="container-fluid container" style="display: flex;">
        <h:div class="span5 check-method-right" style="margin: 0 auto;"> 
        <h:strong class="green-t">Register</h:strong>
                    <h:form class="form-horizontal" method="post" action="register">
                      <h:div class="control-group">
                        <h:label class="control-label" for="inputFirstName">First Name <h:sup>*</h:sup></h:label>
                        <h:div class="controls">
                          <h:input type="text" id="inputFirstName" name="inputFirstName" placeholder=""/>
                        </h:div>
                      </h:div>
                      <h:div class="control-group">
                        <h:label class="control-label" for="inputLastName">Last Name <h:sup>*</h:sup></h:label>
                        <h:div class="controls">
                          <h:input type="text" id="inputLastName" name="inputLastName" placeholder=""/>
                        </h:div>
                      </h:div>
                      <h:div class="control-group">
                        <h:label class="control-label" for="inputEmail">Email Address <h:sup>*</h:sup></h:label>
                        <h:div class="controls">
                          <h:input type="text" id="inputEmail" name="inputEmail" placeholder=""/>
                        </h:div>
                      </h:div>
                      <h:div class="control-group">
                        <h:label class="control-label" for="inputPassword">Password <h:sup>*</h:sup></h:label>
                        <h:div class="controls">
                          <h:input type="password" id="inputPassword" name="inputPassword" placeholder=""/>
                        </h:div>
                      </h:div>
                      <h:div class="control-group">
                        <h:label class="control-label" for="inputAddress">Address <h:sup>*</h:sup></h:label>
                        <h:div class="controls">
                          <h:input type="text" id="inputAddress" name="inputAddress" placeholder=""/>
                        </h:div>
                      </h:div>
                      <h:div class="control-group">
                        <h:label class="control-label" for="inputPhone">Phone <h:sup>*</h:sup></h:label>
                        <h:div class="controls">
                          <h:input type="text" id="inputPhone" name="inputPhone" placeholder=""/>
                        </h:div>
                      </h:div>
                      <h:p><h:a href="#">Forgot your password?</h:a></h:p>
                      <h:div class="control-group">
                        <h:div class="controls">
                          <h:button type="submit" class="more-btn">Register</h:button>
                        </h:div>
                      </h:div>
                    </h:form>
                    <h:p>Already registered? Please <h:a href="login.zul">log in</h:a>!</h:p>
                  </h:div>
    </h:section>    
    <include src="/layout/footer.zul" />
   
        </h:div>
</zk>